<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>


    <div class="container">
      
        <%- include('../partials/nav.ejs') %>

        <div class="mt-5">
            <h1>Blog Articles</h1>
        </div>


        <div class="row">
            <div class="col-md-6">

                <% articles.forEach(article => { %>

                    <div class="post mt-4">
                             <div class="card">
                                 <div class="card-body">
                                     <h4 class="card-title"> <%= article.title %> </h4>
                                     <div class="card-subtitel">
                                         <%= article.createdAt.toLocaleString() %>
                                     </div>
                                     <div class="card-text">
                                         <%= article.description %>
                                     </div>
                                 </div>
                             </div>
                    </div>
                            
                 <% }) %>
         

            </div>
            
        </div>

     

    </div>


    <%- include('../partials/footer.ejs') %>

</body>
</html>